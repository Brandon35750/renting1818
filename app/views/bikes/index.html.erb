<div class="container">
  <form novalidate="novalidate" class="simple_form search" action="/bikes" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="query" id="str" />
      <button name="button" type="submit" class="btn btn-dark">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  </form>
</div>

<div class="container">
  <div class="row">
    <% @bikes.each do |bike| %>
    <div class="col-12 col-md-6 col-lg-3 my-2">
      <%= link_to(bike_path(bike), class: "link") do %>
      <%= render "shared/card-product", card_infos: bike %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div id="map" style="width: 100%; height: 300px;" data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
