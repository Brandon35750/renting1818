<div class="container">
  <h1>List of bikes</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= form_tag(bikes_path, method: :get, class: "form-inline") do %>
        <%= text_field_tag(:query, params[:query], class: "form-control", placeholder: "Find a bike") %>
        <%= submit_tag "Search", class: "btn btn-outline-success" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-12 col-md-6 col-lg-3 my-2">
        <%= render "shared/card-product", card_infos: bike %>
      </div>
    <% end %>
  </div>
</div>
