<div class="container">
  <h1>Change <%= @my_bike.title %></h1>
  <%= request.path %>
</div>

<%#= render 'form' %>

<div class="container">
<%= form_for(@my_bike) do |f| %>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>

  <%#= f.label(:) %>
  <%= f.text_field(:bike_type) %>

  <%= f.label(:description) %>
  <%= f.text_field(:description) %>

  <%= f.label("Daily Price") %>
  <%= f.text_field(:daily_price) %>

  <%#= f.label(:) %>
  <%= f.text_field(:enable) %>

  <h4>Please indicate where is your bike:</h4>
  <h4>(as its location may be different from the address indicated in your profile)</h4>
  <%= f.text_field(:address_line_1) %>
  <%= f.text_field(:address_line_2) %>
  <%= f.text_field(:zipcode) %>
  <%= f.text_field(:city) %>
  <%= f.text_field(:country) %>
<% end %>

  <%= link_to 'Back', my_bikes_path %>
</div>
